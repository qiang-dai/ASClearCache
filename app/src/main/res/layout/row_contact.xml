<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    tools:background="#EEE">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/row_contact_icon_size"
        android:layout_height="@dimen/row_contact_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/row_contact_icon_margin"
        android:layout_marginStart="@dimen/row_contact_icon_margin"
        android:contentDescription="@string/cont_desc_contact_icon"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/row_contact_text_right_margin"
        android:layout_marginLeft="@dimen/row_contact_text_margin_left"
        android:layout_marginRight="@dimen/row_contact_text_right_margin"
        android:layout_marginStart="@dimen/row_contact_text_margin_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_contact_name_bottom_margin"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/row_contact_name_text_size"
            tools:text="Joe"/>

        <TextView
            android:id="@+id/contact_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/row_contact_phone_number_text_size"
            tools:text="+49123123123"/>

    </LinearLayout>

</FrameLayout>